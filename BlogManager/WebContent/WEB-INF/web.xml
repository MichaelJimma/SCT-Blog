<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:web="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <display-name>Blog Manager</display-name>
  <welcome-file-list>
    <welcome-file>register.html</welcome-file>
    <welcome-file>register.htm</welcome-file>
    <welcome-file>register.jsp</welcome-file>
    <welcome-file>register.html</welcome-file>
    <welcome-file>register.htm</welcome-file>
    <welcome-file>register.jsp</welcome-file>
  </welcome-file-list>
  <filter>
    <filter-name>Authenticator</filter-name>
    <filter-class>
    blogmanager.model.Authenticator
  </filter-class>
  </filter>
  <filter-mapping>
    <filter-name>Authenticator</filter-name>
    <url-pattern>/welcome.jsp</url-pattern>
    <url-pattern>/WelcomeController</url-pattern>
    <url-pattern>/newpost.jsp</url-pattern>
    <url-pattern>/NewPostController</url-pattern>
    <url-pattern>/comment.jsp</url-pattern>
    <url-pattern>/CommentController</url-pattern>
    <url-pattern>/success.jsp</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>Register</servlet-name>
    <servlet-class>com.blog.Register</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Register</servlet-name>
    <url-pattern>/Register</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Register</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>
</web-app>